        "mikecao/flight": "^2.0",
        "firebase/php-jwt": "^6.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Models\\": "src/models/",
            "App\\Config\\": "src/config/",
